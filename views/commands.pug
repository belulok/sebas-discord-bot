include includes/mixins

head
  include includes/header.pug
  script(src='https://cdn.jsdelivr.net/npm/fuse.js/dist/fuse.js', defer)
  script(src='js/commands.js', defer)


  style.
    hr {
    background-color: #808080;
    height: 1px;
    width: 100%;
    }
    .spacing {
      padding:0 20%;
    }
    .commands-info {
    height: 200px;  // Adjust this value as needed
    }

// Navigation Bar /
include includes/nav.pug

// Content
// This is the code for the content
.jumbotron.text-center.spacing
  h1.display-4 1PG - Commands
  p.lead View your commands for your bot.
  hr

  // This is the code for search box
  section
    .d-flex.justify-content-center
      #search.form-group.p-3
        input.form-control(type='search')
      button.btn
        i.fa.fa-search(aria-hidden='true')

  // This is the code for table
  .row
    .col.sm-3.categories
      ul.list-group.mb-2
        each category in categories
          +category(category)
    .col.sm-9.commands
      ul.list-group.mb-2
        +commandsInfo(latestGuild)
        +qrCodeInfo(latestQRCommand)
